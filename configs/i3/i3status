general {
        output_format = "i3bar"
        colors = true
        interval = 1
}

order += "disk /"
order += "wireless wlp3s0"
order += "battery 0"
order += "cpu_temperature 0"
order += "tztime local"

wireless wlp3s0 {
        format_up = "%essid %ip"
        format_down = "down"
}

battery 0 {
        format = "%status %percentage %remaining %consumption"
        format_down = "No battery"
        status_chr = "⚡"
        status_bat = "🔋"
        status_unk = "?"
        status_full = "😁"
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

tztime local {
        format = "%Y-%m-%d %H:%M:%S"
}

cpu_temperature 0 {
        format = "%degrees°C"
        path = "/sys/devices/platform/coretemp.0/hwmon/hwmon2/temp1_input"
}

disk "/" {
        format = "%free"
}
