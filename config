#!/bin/bash

###### tldr has to clone a repo at first run
tldr man

###### Install the Please build system
insh https://get.please.build

###### Install FL Studio
[ "$I3B_FL" = 1 ] && imod fl

###### Set configs
cd configs
make install
cd ..

###### Install fonts
source packages/fonts

###### Install vim plugins
source packages/vim

###### Install i3b-zsh
cp -f configs/zshrc ~/.zshrc
cp -f configs/zsh-theme ~/.zshtheme

###### Configure git
git config --global core.editor vim
git config --global credential.helper /usr/share/doc/git/contrib/credential/libsecret/git-credential-libsecret
git config --global user.signingkey "$(gpg --list-keys | grep -E '[0-9A-F]{40}' | sed 's/ //g')"
git config --global commit.gpgsign true
gpg -a --export > /home/$(logname)/.gitpg_pubkey

###### Install wallpapers
git clone https://github.com/chrissxYT/walls.git ~/.walls
