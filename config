#!/bin/bash

I3B_OMZSH_DL_URL='https://raw.github.com/robbyrussell/oh-my-zsh/master/tools/install.sh'
I3B_YCM_FLAGS="--clang-completer --cs-completer --java-completer --go-completer --rust-completer"

source i3brc

###### Set configs
cd configs
make install
cd ..

###### Install fonts
mkdir ~/.fonts
cp packages/fonts ~/.fonts/dl
ret=$(pwd)
cd ~/.fonts
sh dl
rm -f dl
cd "$ret"

###### Install vim plugins
mkdir -p ~/.vim/autoload ~/.vim/bundle
curl -LSso ~/.vim/autoload/pathogen.vim https://tpo.pe/pathogen.vim
git clone https://github.com/itchyny/lightline.vim ~/.vim/bundle/lightline.vim
git clone https://github.com/w0rp/ale ~/.vim/bundle/ale
git clone https://github.com/Valloric/YouCompleteMe.git ~/.vim/bundle/YouCompleteMe
ret=$(pwd)
cd ~/.vim/bundle/YouCompleteMe
git submodule update --init --recursive
./install.py $I3B_YCM_FLAGS
cd $ret

###### Install Oh-my-zsh
netsh $I3B_OMZSH_DL_URL
cp -f configs/zshrc ~/.zshrc

###### Configure git
git config --global credential.helper /usr/share/doc/git/contrib/credential/libsecret/git-credential-libsecret
git config --global core.editor vim
git config --global commit.gpgsign true

###### Install wallpapers
git clone https://github.com/chrissxyt/walls ~/.walls
